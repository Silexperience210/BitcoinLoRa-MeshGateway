<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Animated gradient background -->
    <View
        android:id="@+id/gradientBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/animated_gradient" />

    <!-- Particle overlay -->
    <View
        android:id="@+id/particleOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Scan lines effect -->
    <View
        android:id="@+id/scanLines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scan_lines"
        android:alpha="0.1" />

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER with glow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="16dp">

            <!-- Bitcoin Logo with pulse animation -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="8dp">

                <View
                    android:id="@+id/pulseRing1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pulse_ring" />

                <View
                    android:id="@+id/pulseRing2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pulse_ring" />

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bitcoin_lightning"
                    android:contentDescription="Logo" />
            </FrameLayout>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BITCOIN MESH"
                android:textColor="#FF6B00"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:shadowColor="#FF6B00"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš¡ BROADCAST TX OVER LORA âš¡"
                android:textColor="#00FFAA"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:letterSpacing="0.2" />
        </LinearLayout>

        <!-- CONNECTION STATUS with neon border -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <View
                android:id="@+id/connectionGlow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/neon_border_glow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/glass_panel"
                android:padding="12dp"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/connectionDot"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/status_dot_red" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="SEARCHING MESH..."
                    android:textColor="#AAAACC"
                    android:textSize="13sp"
                    android:fontFamily="monospace" />

                <Button
                    android:id="@+id/scanButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="âŸ³ SCAN"
                    android:textColor="#00FFAA"
                    android:textSize="11sp"
                    android:background="@drawable/cyber_button"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- DEVICE SELECTOR -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <Spinner
                android:id="@+id/deviceSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/glass_panel"
                android:popupBackground="#0A0A15"
                android:padding="12dp" />
        </FrameLayout>

        <!-- CONNECT BUTTON with cyber effect -->
        <Button
            android:id="@+id/connectButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="âš¡ CONNECT TO MESH âš¡"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/neon_button_orange"
            android:layout_marginBottom="16dp"
            android:fontFamily="monospace" />

        <!-- TX INPUT with holographic effect -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â–¶ RAW TRANSACTION HEX"
            android:textColor="#FF6B00"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:paddingBottom="6dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                android:id="@+id/inputGlow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/holographic_border" />

            <EditText
                android:id="@+id/txInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/terminal_bg"
                android:textColor="#00FF88"
                android:textColorHint="#335544"
                android:hint="PASTE SIGNED TX HERE..."
                android:gravity="top"
                android:padding="14dp"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textSize="11sp"
                android:fontFamily="monospace" />
        </FrameLayout>

        <!-- STATS BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/charCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 BYTES"
                android:textColor="#666688"
                android:textSize="11sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/chunkCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 PACKETS"
                android:textColor="#FF6B00"
                android:textSize="11sp"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- ACTION BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/pasteButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="ðŸ“‹ PASTE"
                android:textColor="#00FFAA"
                android:textSize="12sp"
                android:background="@drawable/cyber_button"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/clearButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="âœ– CLEAR"
                android:textColor="#FF4444"
                android:textSize="12sp"
                android:background="@drawable/cyber_button"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- BROADCAST BUTTON - Main action with intense glow -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <View
                android:id="@+id/broadcastGlow"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/intense_glow_orange" />

            <Button
                android:id="@+id/broadcastButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="âš¡ BROADCAST TO BITCOIN NETWORK âš¡"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/broadcast_button"
                android:fontFamily="monospace"
                android:enabled="false" />
        </FrameLayout>

        <!-- PROGRESS with cyber style -->
        <FrameLayout
            android:id="@+id/progressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/neon_progress"
                android:background="@drawable/progress_bg" />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="TRANSMITTING 0/0"
                android:textColor="#FF6B00"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:gravity="center" />
        </FrameLayout>

        <!-- LOG TERMINAL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â–¶ SYSTEM LOG"
            android:textColor="#666688"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:paddingBottom="4dp" />

        <ScrollView
            android:id="@+id/logScroll"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/terminal_bg"
            android:padding="8dp">

            <TextView
                android:id="@+id/logText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#00AA66"
                android:textSize="9sp"
                android:fontFamily="monospace"
                android:lineSpacingMultiplier="1.2" />
        </ScrollView>

        <!-- FOOTER -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SILEXPERIENCE Ã— PROFEDUSTREAM"
            android:textColor="#333344"
            android:textSize="9sp"
            android:gravity="center"
            android:fontFamily="monospace"
            android:letterSpacing="0.3"
            android:paddingTop="8dp" />

    </LinearLayout>
</FrameLayout>
